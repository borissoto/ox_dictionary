     
      <div style="width: 400px">
       <div>
      <% if flash[:alert] %>     
        <div class="alert"><%= flash[:alert] %>
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>  
        </div>      
      <% end %>    
      </div>
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">
            <%= label_tag :term, 'Search for a term '%>
            <%= text_field_tag :term, nil, placeholder: 'Eg. Home', class: 'form-control' %>
          </div>
          <%= button_tag 'Search', class: 'button' %>
        <% end %>
      </div>
    
